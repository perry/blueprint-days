{
  "manifest_version": 2,
  "name": "Blueprint Days",
  "version": "0.2",
  "description": "List the number of days resources have worked on projects.",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/jquery.min.js", "lib/underscore.min.js", "lib/main.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["lib/main.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "http://*.blueprintlog.com/"
  ]

}
